#include 'protheus.ch'
#include 'parmtype.ch'

User function ADVPL()
// Linha 

/* Comentario
de 
Bloco
*/

nValor  := 0 // Numerico
cVar    := "" // ' ' // Caracter 
lVar    := .T. // Logico
dVar    := Data()  // Data
bVar    := { || }  // Bloco
aVar    := {}     // Array Vetor 
oVar    := Nil    // objeto
      
Return( NIL )
//----------------------------------------------------

User Function xVar()

Local xVar 

xVar := "Agora a variavel é caracter..."

MsgInfo(xVar)

xVar := 22 + 10  // Agora é numerico 

MsgInfo(xVar)

xVar := .T. // Agora é Logico
 
If xVar    // Não é necessario colocar operador ex : If xVar == .T.
 MsgInfo("Verdadeiro")
Else 
 MsgInfo("Falso")
EndIf 

xVar := Date() + 2 // Agora é Data

MsgInfo("Hoje é :" + Dtoc(xVar))	

xVar := Nil 

MsgInfo("Valor nulo" + CValTochar(xVar) + "..." )

Return( NIL )
//----------------------------------------------------












